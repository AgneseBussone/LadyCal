<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_baseTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_baseTheme</item>
        <item name="colorAccent">@color/colorAccent_baseTheme</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark_baseTheme</item>
    </style>

    <style name="BlueTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_blueTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_blueTheme</item>
        <item name="colorAccent">@color/colorAccent_blueTheme</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark_blueTheme</item>
    </style>

    <style name="GreenTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_greenTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_greenTheme</item>
        <item name="colorAccent">@color/colorAccent_greenTheme</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark_greenTheme</item>
    </style>

    <style name="PrefStyle" parent="AppTheme">
        <!-- Get rid of the list divider only in the preference activity-->
        <item name="android:listDivider">@null</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/background_splash</item>
    </style>

    <style name="TutorialTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/tutorial_background</item>
    </style>

</resources>
